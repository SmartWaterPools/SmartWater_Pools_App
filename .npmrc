# This file prevents npm from interpreting path aliases as organization scopes
save-exact=true
save-prefix=""

# Explicitly set the registry for path alias scopes
@components:registry=file:./
@hooks:registry=file:./
@lib:registry=file:./

# Additional configuration to avoid treating path aliases as packages
# but rather as local directories with placeholders
public-hoist-pattern[]=@components/*
public-hoist-pattern[]=@hooks/*
public-hoist-pattern[]=@lib/*